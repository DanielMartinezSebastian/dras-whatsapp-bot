# DrasBot Nueva Arquitectura - Variables de Entorno

# WhatsApp Bridge Configuration
BRIDGE_URL=http://127.0.0.1:8080
BRIDGE_API_KEY=your-api-key-here

# Bot Configuration
BOT_NAME=DrasBot
BOT_PREFIX=!
BOT_LANGUAGE=es
BOT_TIMEZONE=America/Mexico_City

# Database Configuration
DATABASE_PATH=./data/drasbot.db
DATABASE_BACKUP_INTERVAL=3600000
DATABASE_MAX_CONNECTIONS=10

# Server Configuration
PORT=3000
HOST=127.0.0.1
NODE_ENV=development

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/drasbot.log
LOG_MAX_SIZE=10485760
LOG_MAX_FILES=5

# Security Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=your-session-secret-here

# Features Configuration
ENABLE_PLUGINS=true
ENABLE_CONTEXTS=true
ENABLE_WEB_PANEL=true
ENABLE_API=true

# Performance Configuration
MESSAGE_POLLING_INTERVAL=5000
CONTEXT_CLEANUP_INTERVAL=3600000
CACHE_TTL=1800000

# Development Configuration
DEBUG_MODE=false
MOCK_WHATSAPP=false
ENABLE_HOT_RELOAD=true
