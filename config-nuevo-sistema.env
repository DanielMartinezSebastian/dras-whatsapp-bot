# Configuración del Nuevo Sistema de Comandos - drasBot

# =============================================================================
# CONFIGURACIÓN PRINCIPAL
# =============================================================================

# Habilitar el nuevo sistema de comandos
# Valores: true/false
# Por defecto: false (para compatibilidad)
ENABLE_NEW_COMMANDS=false

# Prefijo para comandos del nuevo sistema
# Por defecto: !
COMMAND_PREFIX=!

# Usar modo de fallback (mantener sistema antiguo como backup)
# Valores: true/false
# Por defecto: true (recomendado durante migración)
USE_LEGACY_FALLBACK=true

# =============================================================================
# CONFIGURACIÓN DEL BOT (EXISTENTE)
# =============================================================================

# Nombre del bot
BOT_NAME=DrasBot

# Prefijo para respuestas del bot
BOT_PREFIX="Bot "

# Activar respuestas automáticas
AUTO_REPLY=true

# =============================================================================
# CONFIGURACIÓN AVANZADA DEL SISTEMA DE COMANDOS
# =============================================================================

# Tiempo de limpieza de cooldowns (en milisegundos)
# Por defecto: 300000 (5 minutos)
COOLDOWN_CLEANUP_INTERVAL=300000

# Límite máximo de comandos en cooldown por usuario
# Por defecto: 10
MAX_USER_COOLDOWNS=10

# Habilitar logs detallados del sistema de comandos
# Valores: true/false
# Por defecto: false
DEBUG_COMMANDS=false

# Directorio base para comandos personalizados (opcional)
# Si no se especifica, usa la estructura estándar
# CUSTOM_COMMANDS_DIR=

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD
# =============================================================================

# Requiere autenticación para comandos admin
# Valores: true/false
# Por defecto: true
REQUIRE_ADMIN_AUTH=true

# Tiempo de cooldown global mínimo (segundos)
# Aplicado a todos los comandos si no tienen cooldown específico
# Por defecto: 0 (sin cooldown global)
GLOBAL_COMMAND_COOLDOWN=0

# Máximo número de argumentos permitidos por comando
# Previene ataques de spam
# Por defecto: 20
MAX_COMMAND_ARGS=20

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================

# Modo de desarrollo - habilita funciones extra
# Valores: true/false
# Por defecto: false
DEV_MODE=false

# Auto-reload de comandos en desarrollo
# Valores: true/false
# Por defecto: false
AUTO_RELOAD_COMMANDS=false

# Mostrar stack traces completos en errores
# Valores: true/false
# Por defecto: false
SHOW_ERROR_STACKS=false

# =============================================================================
# INSTRUCCIONES DE USO
# =============================================================================

# 1. ACTIVACIÓN BÁSICA:
#    Cambiar ENABLE_NEW_COMMANDS=true
#    Reiniciar el bot
#    Verificar con: !admin-system stats

# 2. ACTIVACIÓN GRADUAL:
#    Mantener USE_LEGACY_FALLBACK=true
#    Probar comandos nuevos: !help, !ping, !status
#    Monitorear logs y estadísticas
#    Una vez estable, migrar comandos restantes

# 3. DESARROLLO:
#    Activar DEV_MODE=true
#    Usar AUTO_RELOAD_COMMANDS=true para desarrollo rápido
#    Activar DEBUG_COMMANDS=true para debugging

# 4. PRODUCCIÓN:
#    ENABLE_NEW_COMMANDS=true
#    USE_LEGACY_FALLBACK=false (una vez migración completa)
#    DEBUG_COMMANDS=false
#    DEV_MODE=false

# =============================================================================
# COMANDOS DE GESTIÓN
# =============================================================================

# Comandos administrativos disponibles:
# !admin-system stats     - Ver estadísticas completas
# !admin-system reload    - Recargar comandos
# !admin-system toggle    - Alternar sistema nuevo/antiguo
# !admin-system help      - Ayuda del sistema administrativo

# Comandos de información:
# !help                   - Lista de comandos
# !status                 - Estado del sistema
# !info                   - Información del bot
# !ping                   - Test de latencia

# =============================================================================
# SOLUCIÓN DE PROBLEMAS
# =============================================================================

# Problema: Comandos no se cargan
# Solución: Verificar permisos de archivos y estructura de directorios
#          Activar DEBUG_COMMANDS=true para ver logs detallados

# Problema: Comandos admin no funcionan
# Solución: Verificar REQUIRE_ADMIN_AUTH y permisos de usuario
#          Revisar logs de permissionService

# Problema: Alta latencia en comandos
# Solución: Revisar COOLDOWN_CLEANUP_INTERVAL
#          Verificar estadísticas con !admin-system stats

# Problema: Errores durante migración
# Solución: Mantener USE_LEGACY_FALLBACK=true
#          Revisar logs de BotProcessor
#          Verificar compatibilidad de comandos migrados
