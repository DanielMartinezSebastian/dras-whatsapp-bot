# Configuración del WhatsApp Chatbot
# Copia este archivo a .env y modifica los valores según tu entorno

# =================================
# CONFIGURACIÓN DEL SERVIDOR
# =================================

# Puerto del chatbot (por defecto: 3000)
PORT=3000

# Host de escucha - MANTENER 127.0.0.1 POR SEGURIDAD
# Solo cambia si sabes lo que haces
HOST=127.0.0.1

# Modo de ejecución
NODE_ENV=production
NODE_ENV=production

# ===== CONFIGURACIÓN DEL WHATSAPP BRIDGE =====
# URL del WhatsApp Bridge
BRIDGE_URL=http://127.0.0.1:8080

# Ruta a la base de datos del bridge
BRIDGE_DB_PATH=../whatsapp-bridge/store/messages.db

# Ruta a la base de datos de sesión del bridge
BRIDGE_SESSION_DB_PATH=../whatsapp-bridge/store/whatsapp.db

# ===== CONFIGURACIÓN DE LA BASE DE DATOS =====
# Ruta donde se almacenará la base de datos del chatbot
DB_PATH=./database/chatbot.db

# ===== CONFIGURACIÓN DE LOGS =====
# Nivel de logs (debug, info, warn, error)
LOG_LEVEL=info

# Directorio de logs
LOG_DIR=./logs

# ===== CONFIGURACIÓN DEL CHATBOT =====
# Tiempo de polling para nuevos mensajes (en milisegundos)
POLLING_INTERVAL=2000

# Tiempo máximo de espera para respuestas (en milisegundos)
RESPONSE_TIMEOUT=30000

# ===== CONFIGURACIÓN DE SEGURIDAD =====
# Clave secreta para la API (genera una clave fuerte)
API_SECRET=tu-clave-secreta-muy-fuerte-aqui

# ==================== CONFIGURACIÓN DE REGISTRO DE NOMBRES ====================
# Configuración para el sistema de registro de nombres de usuarios

# Número máximo de intentos para registrar nombre
MAX_NAME_ATTEMPTS=3

# Tiempo límite para completar registro (en millisegundos)
# 1800000 = 30 minutos
REGISTRATION_TIMEOUT=1800000

# Longitud mínima del nombre
MIN_NAME_LENGTH=2

# Longitud máxima del nombre
MAX_NAME_LENGTH=50

# ==================== CONFIGURACIÓN DEL BOT ====================
BOT_NAME=DrasBot
BOT_PREFIX="Bot "
AUTO_REPLY=true

# Rate limiting (mensajes por minuto por usuario)
RATE_LIMIT_MESSAGES_PER_MINUTE=10

# Configuración de anti-spam
SPAM_DETECTION_ENABLED=true
SPAM_THRESHOLD=5

# Intervalo de limpieza de registros expirados (en millisegundos)
# 900000 = 15 minutos
CLEANUP_INTERVAL=900000

# Habilitar notificaciones a administradores
ADMIN_NOTIFICATIONS=true

# ===== CONFIGURACIÓN OPCIONAL =====
# Activar modo debug
DEBUG=false

# Activar modo de desarrollo (más logs, recarga automática)
DEV_MODE=false
