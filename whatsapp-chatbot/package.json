  },
  "keywords": [
    "whatsapp",
    "chatbot",
    "nodejs",
    "typescript",
    "modular",
    "intelligent"
  ],
  "description": "Sistema inteligente de chatbot WhatsApp con arquitectura modular moderna - Desarrollado por Daniel Martinez Sebastian",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/app.ts",
    "dev:watch": "nodemon --exec ts-node src/app.ts",
    "start": "node dist/app.js",
    "start:legacy": "node src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
